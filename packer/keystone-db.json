{
    "builders": [
        {
            "type": "openstack",
            "image_name": "keystone-db",
            "source_image_name": "testinfra-bionic",
            "flavor": "m1.micro",
            "use_floating_ip": true,
            "floating_ip_pool": "ext-net",
            "security_groups": "testinfra-ssh_only",
            "ssh_username": "ubuntu",
            "ssh_keypair_name": "testinfra-kitchen",
            "reuse_ips": true,
            "networks": [
                "5d58c0ce-0a53-4452-96d7-1713560b4cde"
            ]
        }
    ],
    "provisioners": [
        {
          "type": "ansible",
          "playbook_file": "../plays/keystone-db.yml",
          "groups": [
              "keystone-db"
          ],
          "ansible_env_vars": [ "ANSIBLE_CONFIG=../ansible.cfg" ],
          "extra_arguments": [ "--extra-vars", "@vars.yml" ]
        }
    ]
}
